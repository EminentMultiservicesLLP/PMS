@model PMS.Areas.Masters.Models.SubheadsModel
@using System.Web.Mvc.Html

@using (Html.BeginForm())
{
    <fieldset>
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-groupingBoder">
                    <div class="panel-heading">
                        <div class="panel-title">
                            <a class="collapsediv" data-toggle="collapse" href="#SearchDetails" style="color: white">
                                SubHeads Master
                            </a>
                        </div>
                    </div>
                    <div id="SearchDetails" class="panel-collapse collapse in" aria-expanded="true">

                        <div class="panel-body panel-groupingBoder">
                            <div class="container fill">
                                <div class="row">
                                    <div id="SubHeadMastersearchgrid" class="col-sm-6"></div>
                                    <div class="col-sm-6 ">
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <button type="button" class="btn btn-success" id="btnAdd">Add New Entry</button>
                                                <button type="button" class="btn btn-success" id="btnSave">Save</button>
                                                <button type="button" class="btn btn-success" id="btnReset">Reset</button>
                                            </div>
                                        </div>
                                        <br />
                                        <div class="row">
                                            <div class="col-sm-4">
                                                @Html.Label("Questionnaire Name")
                                                @Html.TextBoxFor(m => m.QuestionnaireName, new { @class = "form-control " })
                                                @*@Html.Label("Select Questionnaire Name", new { @class = "required" })*@
                                                @Html.DropDownList("ddlQuestionnaire", new SelectList(string.Empty, "Value", "Text" ), "Select", new { @class = "form-control", @style = "display:none" })
                                                </div>                                          
                                             
                                             <div class="col-sm-4">
                                                <br />
                                                @Html.LabelFor(model => model.Deactive)
                                                @Html.CheckBoxFor(model => model.Deactive)
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-6">                                               

                                                    @Html.Label("Select Head Name", new { @class = "required" })
                                                    @Html.DropDownList("ddlHead", new SelectList(string.Empty, "Value", "Text"), "Select", new { @class = "form-control" })
                                                
                                            </div>
                                            <div class="col-sm-6">
                                                @Html.LabelFor(m => m.SubHeadName, new { @class = "required" })
                                                @Html.TextBoxFor(m => m.SubHeadName, new { @class = "form-control " })
                                                @Html.HiddenFor(m => m.SubHeadId)
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </fieldset>

    
}

<script src="~/Scripts/MasterPageScript/SubHeadsMaster.js"></script>